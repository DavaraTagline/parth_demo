<h1>Current Cities :-  </h1><br>
<table border=2 class="table table-success table-striped table-bordered border-dark">
    <tr>
        <th>ID</th>
        <th>State Name</th>
        <th>City Name</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <% @cities.each do |city| %>
        <tr>
            <td><%= city.id %></td>
            <td><%= State.find(city.state_id).name %></td>
            <td><%= city.name %></td>
            <td><%= link_to "Edit", edit_city_path(city)%></td>
            <td><%= link_to "Destroy", city_path(city),  data: { turbo_method: :delete, turbo_confirm: "Are you Sure ?" } %></td>
        </tr>
    <% end %>    
</table>