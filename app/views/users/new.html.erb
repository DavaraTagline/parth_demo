
<br><br>
<h1> New User :- </h1>
<br>

<%= form_with model: @user , data: {turbo: false}  do |form| %>
    
    <div style="color:red;">
        <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
        <% end %>
    </div><br>
    
    <div>
        <%= form.label :username, "Enter Your Username :- " %>
        <%= form.text_field :username %>
    </div><br>
    
    <div>
        <%= form.label :gender, "Select Your Gender :- " %>
        <%= form.radio_button :gender, "male" %>
        <%= form.label :gender_male, "Male"%>
        <%= form.radio_button :gender, "female" %>
        <%= form.label :gender_female, "Female" %>
    </div><br>
    
    <div>
        <%= form.label :Email, "Enter Your Email :- "%>
        <%= form.text_field :email %>
    </div><br>

    <div>
        <%= form.label :state_id, "Select Your State :- "%>
        <%= form.collection_select :state_id, State.order(:id), :id, :name %>
    </div><br>
    
    <div>
        <%= form.label :city_id, "Select Your City :- "%>
        <%#= form.collection_select :city, City.all, :city_name, :city_name %>
        <%#= form.collection_select :city_id, City.order(:id), :id, :city_name %>
        <%= select_tag 'user[city_id]', options_from_collection_for_select(City.all, :id, :name) %>
    </div><br>

    <div>
        <%= form.label :select_hobby, "Select Your Hobby :- "%>
        <%= form.check_box :hobby, {multiple: true}, "reading", nil %>
        <%= form.label :check_reading, "Reading" %>
        <%= form.check_box :hobby, {multiple: true}, "sport", nil %>
        <%= form.label :check_sport, "Sport" %>
        <%= form.check_box :hobby, {multiple: true}, "travelling", nil %>
        <%= form.label :check_travelling, "Travelling" %>
    </div><br>

    <div>   
        <%= form.submit %>
    </div>
<% end %>

