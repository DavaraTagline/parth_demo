
<br>
<%= link_to " => Add New User", new_user_path %>
<br><br>
<h1>Current Users List :- </h1><br>
<table border=2 class="table table-success table-striped table-bordered border-dark" >
    <tr>
        <th>ID</th>
        <th>UserName</th>
        <th>Gender</th>
        <th>Email</th>
        <th>State</th>
        <th>City</th>
        <th>Hobby</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.gender %></td>
            <td><%= user.email %></td>
            <td><%= State.find(user.state_id).name %></td>
            <td><%= City.find(user.city_id).name %></td>
            <td><%= user.hobby %></td>
            <td><%= link_to "Edit", edit_user_path(user)%></td>
            <td><%= link_to "Destroy", user_path(user),  data: { turbo_method: :delete, turbo_confirm: "Are you Sure ?" } %></td>
        </tr>
    <% end %>
</table>
    